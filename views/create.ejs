	<div class="container">

		<h1 style="margin:25px;">글 작성</h1>
		<form action="/post/create" method="POST">
			<div class="form-group">
				<label for="제목">제목</label>
				<input class="form-control" type="text" name="title" placeholder="제목">
			</div>
			<div class="form-group">
				<label for="작성자">작성자</label>
				<input class="form-control" type="text" name="writer" placeholder="작성자">
			</div>
			<div class="form-group">
				<label for="본문">본문</label>
				<textarea class="form-control" name="memo" cols="40" rows="8" placeholder="내용"></textarea>
			</div>
			<button type="submit" class="btn btn-primary btn-lg">
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span> Submit
			</button>
			<button type="button" class="btn btn-primary btn-lg" onclick="location.href='/post/list'">
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span> Back
			</button>
		</form>
